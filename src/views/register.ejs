<body>
    <h1 style="text-align:center">Register Page</h1>

    <div class="container mt-5">
        <div class="row dflex justify-content-center">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Register Page</h5>
                    <form action="/register" method="POST">
                        <input class="form-control mt-3" type="text" name="username" id="" placeholder="Username">
                        <input class="form-control mt-3" type="email" name="email" id="" placeholder="Email">
                        <input class="form-control mt-3" type="password" name="password" id="" placeholder="Password">
                        <button class="btn btn-primary mt-4" type="submit">REGISTER</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <a class="btn btn-danger"href="/">Go Home</a>





